<Window x:Class="ChatBotLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чат-бот" Height="400" Width="600" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox x:Name="lstChatHistory" Grid.Row="0" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="txtMessage" Width="500" KeyDown="txtMessage_KeyDown" />
            <Button Content="Отправить" Click="Button_Click" Width="80" />
        </StackPanel>
    </Grid>
</Window>